{
  "name": "jont-api-tests",
  "version": "1.0.0",
  "description": "Jest, OpenAPI, Nock, and Testcontainers based API tests",
  "main": "index.js",
  "scripts": {
    "start": "ts-node --files ./src/server.ts",
    "dev": "docker-compose up -d && ts-node-dev -r tsconfig-paths/register ./src/server.ts",
    "test": "jest",
    "build": "tsc ./src/server.ts --traceResolution",
    "typeorm": "ts-node -r dotenv/config ./node_modules/.bin/typeorm",
    "migration:run": "npm run typeorm -- migration:run -d src/data-source/migration-data-source.ts",
    "migration:generate": "npm run typeorm -- migration:generate -d src/data-source/migration-data-source.ts migrations/$npm_config_name",
    "migration:create": "npm run typeorm -- migration:create migrations/$npm_config_name",
    "migration:revert": "npm run typeorm -- -d src/data-source/migration-data-source.ts migration:revert"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elliolir/jont-api-tests.git"
  },
  "keywords": [
    "jest",
    "openapi",
    "swagger",
    "nock",
    "testcontainers"
  ],
  "author": "elliolir",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/elliolir/jont-api-tests/issues"
  },
  "homepage": "https://github.com/elliolir/jont-api-tests#readme",
  "devDependencies": {
    "@testcontainers/postgresql": "^10.5.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.2",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "jest": "^29.7.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.19",
    "typescript": "^5.3.3",
    "yaml": "^2.3.4"
  }
}
